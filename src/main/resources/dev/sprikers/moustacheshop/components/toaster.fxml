<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefWidth="300.0" style="-fx-padding: 20 15; -fx-spacing: 15;" stylesheets="@../styles/globals.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.sprikers.moustacheshop.components.ToasterController">
   <children>
      <ImageView fx:id="imgType" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
      <VBox spacing="2.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="lblTitle" styleClass="text" text="title" textAlignment="CENTER" textFill="RED">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblMessage" styleClass="text-muted" text="message" />
         </children>
      </VBox>
   </children>
   <styleClass>
      <String fx:value="container" />
      <String fx:value="background" />
   </styleClass>
</HBox>
