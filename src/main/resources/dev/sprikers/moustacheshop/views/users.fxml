<AnchorPane prefHeight="600.0" prefWidth="600.0" styleClass="background" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.sprikers.moustacheshop.controllers.UserController">
   <VBox layoutX="50.0" layoutY="33.0" spacing="30.0">
      <children>
         <VBox focusTraversable="true" prefWidth="500.0" spacing="20.0" styleClass="card">
            <children>
               <HBox spacing="20.0">
                  <children>
                     <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                           <Label styleClass="text-muted" text="Nombres">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Label>
                           <HBox alignment="CENTER" styleClass="textbox-container">
                              <children>
                                 <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                       <Image url="@../images/user.png" />
                                    </image>
                                    <HBox.margin>
                                       <Insets />
                                    </HBox.margin>
                                 </ImageView>
                                 <TextField fx:id="txtNames" maxHeight="-Infinity" promptText="Matthew Alexander" styleClass="text-field-custom" HBox.hgrow="ALWAYS" />
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                     <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                           <Label styleClass="text-muted" text="DNI">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Label>
                           <HBox alignment="CENTER" styleClass="textbox-container">
                              <children>
                                 <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                       <Image url="@../images/id-card.png" />
                                    </image>
                                    <HBox.margin>
                                       <Insets />
                                    </HBox.margin>
                                 </ImageView>
                                 <TextField fx:id="txtDNI" maxHeight="-Infinity" promptText="43627084" styleClass="text-field-custom" HBox.hgrow="ALWAYS" />
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                  </children>
               </HBox>
               <HBox spacing="20.0">
                  <children>
                     <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                           <Label styleClass="text-muted" text="Apellido Paterno">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Label>
                           <HBox alignment="CENTER" styleClass="textbox-container">
                              <children>
                                 <ImageView fitHeight="20.0" fitWidth="20.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                       <Image url="@../images/file-user.png" />
                                    </image>
                                    <HBox.margin>
                                       <Insets />
                                    </HBox.margin>
                                 </ImageView>
                                 <TextField fx:id="txtPaternalSurname" maxHeight="-Infinity" promptText="Ruiz" styleClass="text-field-custom" HBox.hgrow="ALWAYS" />
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                     <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                           <Label styleClass="text-muted" text="Apellido Materno">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Label>
